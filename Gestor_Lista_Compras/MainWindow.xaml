<Window x:Class="Gestor_Lista_Compras.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestor_Lista_Compras"
        mc:Ignorable="d"
 Title="Login" Height="321" Width="497">
    <Grid Height="auto" Margin="0,0,0,1">

        <Label Content="Username" HorizontalAlignment="Left" Margin="137,51,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="137,88,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_User" HorizontalAlignment="Left" Margin="221,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB_Pass" HorizontalAlignment="Left" Margin="221,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BT_Login" Content="Login" HorizontalAlignment="Left" Margin="150,158,0,0" VerticalAlignment="Top" Width="60" Click="BT_Login_Click"/>
        <Button x:Name="BT_Sair" Content="Sair" HorizontalAlignment="Left" Margin="288,158,0,0" VerticalAlignment="Top" Width="60" Click="BT_Sair_Click"/>
        <Button  x:Name="BT_Registar" Content="Registar" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Width="137" Click="BT_Registar_Click"/>

    </Grid>
</Window>

