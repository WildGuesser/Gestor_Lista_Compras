<Window x:Class="Gestor_Lista_Compras.AddList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestor_Lista_Compras"
        mc:Ignorable="d"
        Title="AddList" Height="195" Width="401" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Nome Lista:" HorizontalAlignment="Left" Margin="42,25,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_NomeLista" HorizontalAlignment="Left" Margin="114,29,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="206"/>
        <Button x:Name="BT_add" Content="Adicionar" HorizontalAlignment="Left" Margin="114,133,0,0" VerticalAlignment="Top" Width="60" Click="BT_add_Click"/>
        <Button x:Name="BT_sair" Content="Sair" HorizontalAlignment="Left" Margin="245,133,0,0" VerticalAlignment="Top" Width="60" Click="BT_sair_Click"/>

    </Grid>
</Window>
