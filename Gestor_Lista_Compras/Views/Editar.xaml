<Window x:Class="Gestor_Lista_Compras.Editar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestor_Lista_Compras"
        mc:Ignorable="d"
        Title="Editar" Height="218" Width="403" Closing="Window_Closing">
    <Grid Loaded="Grid_Loaded">
        <Label Content="Nome Lista:" HorizontalAlignment="Left" Margin="42,25,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_NomeListaEditar" HorizontalAlignment="Left" Margin="114,29,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="206"/>

        <Button x:Name="BT_sair" Content="Sair" HorizontalAlignment="Left" Margin="245,133,0,0" VerticalAlignment="Top" Width="60" Click="BT_sair_Click"/>
        <Button Content="Editar" x:Name="btn_editar" HorizontalAlignment="Left" Margin="90,133,0,0" VerticalAlignment="Top" Width="54" Click="btn_editar_Click"/>
    </Grid>
</Window>
